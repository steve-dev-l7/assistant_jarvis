<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Inner background (dark core, Jarvis style) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#101215" /> <!-- Futuristic dark base -->
            <corners android:radius="16dp" />
        </shape>
    </item>

    <!-- Neon Gradient Stroke (Jarvis glow effect) -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#00F5FF"
                android:centerColor="#14FFE9"
                android:endColor="#00BFFF"
                android:type="linear" />
            <stroke
                android:width="3dp"
                android:color="@android:color/transparent" /> <!-- Transparent placeholder -->
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
