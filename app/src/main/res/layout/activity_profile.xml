<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fadesbg"
    tools:context=".Profile"
    tools:ignore="HardcodedText">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/heading"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:text="Steve Creations"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </androidx.appcompat.widget.Toolbar>

    <!-- Scrollable content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/my_toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="24dp">

            <!-- Lottie animation -->
            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/ProfileAnimation"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/user" />

            <!-- Form Inputs -->
            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:hint="Type your full name"
                android:inputType="text"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="Type your age"
                android:inputType="number"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="Set User Id"
                android:inputType="number"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/dob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="DOB : '00-00-0000'"
                android:inputType="text"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="Mobile number"
                android:inputType="phone"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="Your city name"
                android:inputType="text"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <EditText
                android:id="@+id/BloodGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxWidth="300dp"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:hint="Enter Blood group"
                android:inputType="text"
                android:textColor="#00FFFF"
                android:textColorHint="#00FFFF"
                android:padding="10dp"
                style="@style/FormInput"/>

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/bloodDonate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Agree to donate"
                android:textColor="@color/white"/>

            <!-- Buttons -->
            <Button
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:background="@drawable/btnshape"
                android:text="Save"
                android:textColor="@color/black"/>

            <Button
                android:id="@+id/saveUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/btnshape"
                android:text="Save"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <!-- Login link -->
            <TextView
                android:id="@+id/gologin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Already Have An Account? Log in"
                android:textColor="@color/white"
                android:textSize="15sp"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
